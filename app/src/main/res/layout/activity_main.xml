<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/btnCiudades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/btnSevilla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/str_Sevilla" />

                <RadioButton
                    android:id="@+id/btnMalaga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/str_Malaga" />

                <RadioButton
                    android:id="@+id/btnCadiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/str_Cadiz" />

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/btnCiudades2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/btnJaen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_Jaen" />

                <RadioButton
                    android:id="@+id/btnCordoba"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_cordoba" />

                <RadioButton
                    android:id="@+id/btnAlmeria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_Almeria" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>